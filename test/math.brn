let abs n = 
  if n >= 0 then n else -n

let min a b =
  if a <= b then a else b

let max a b =
  if a >= b then a else b

let rec gcd a b =
  if b = 0 then a else gcd b (a % b)

let rec fact = function
  | 0 => 1
  | n => n * fact (n-1)

let rec expt a n =
  if n = 0 then 1 else
  if n % 2 = 0 then expt (a*a) (n/2) else
  a * expt a (n - 1)